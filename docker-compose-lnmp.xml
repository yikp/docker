version: '3.9'

services:
  nginx:
    image: nginx:latest
    container_name: nginx
    restart: always
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - ./conf.d:/etc/nginx/conf.d
      - ./certs:/etc/nginx/certs
      - ./html:/var/www/html
      - ./log/nginx:/var/log/nginx
    depends_on:
      - php
      - mysql
    networks:
      - lnmp-network

  php:
    image: php:latest
    container_name: php
    restart: always
    volumes:
      - ./html:/var/www/html
    depends_on:
      - mysql
    networks:
      - lnmp-network

  mysql:
    image: mysql:5.7.44
    container_name: mysql
    restart: always
    volumes:
      - ./mysql:/var/lib/mysql
    environment:
      MYSQL_ROOT_PASSWORD: Root_pwd_demo
      MYSQL_USER: User_demo
      MYSQL_PASSWORD: User_pwd_demo
    networks:
      - lnmp-network

  memcached:
    image: memcached:latest
    container_name: memcached
    restart: always
    networks:
      - lnmp-network

networks:
  lnmp-network:
    driver: bridge
